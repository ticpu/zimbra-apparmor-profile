  /opt/zimbra/common/sbin/postlog Px,
  /opt/zimbra/common/sbin/postsuper Ux,
  /opt/zimbra/data/postfix/spool/pid/* r,
  /opt/zimbra/data/tmp/* w,
  /usr/bin/* ix,
  owner /opt/zimbra/common/conf/* r,
  owner /opt/zimbra/common/lib/lib*so* mr,
